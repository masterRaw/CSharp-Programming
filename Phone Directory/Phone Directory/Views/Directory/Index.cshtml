@model IEnumerable<Phone_Directory.Models.Directory>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Phone Directory</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Directory" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Contact
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        <center>Contact Name</center>
                    </th>
                    <th>
                        <center>ISD Code</center>
                    </th>
                    <th>
                        <center>Contact Number</center>
                    </th>
                    <th>
                        <center>Updation</center>
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="30%">@obj.Name</td>
                    <td width="10%">@obj.ISD</td>
                    <td width="30%">@obj.Number</td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Directory" asp-route-Id="@obj.UID" asp-action="Edit" class="btn btn-primary ">
                                <i class="fas fa-edit"></i>Edit
                            </a>
                            <a asp-controller="Directory" asp-route-Id="@obj.UID" asp-action="Delete" class="btn btn-danger">
                                <i class="far fa-trash-alt"></i>Delete
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }

</div>
