@model Phone_Directory.Models.Directory

<form method="post" asp-action="DeleteP">
    <input asp-for="UID" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Contact Detail</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" disabled class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        ISD Code
                    </div>
                    <div class="col-8">
                        <input asp-for="ISD" disabled class="form-control" />
                        <span asp-validation-for="ISD" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        Contact Number
                    </div>
                    <div class="col-8">
                        <input asp-for="Number" disabled class="form-control" />
                        <span asp-validation-for="Number" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info  w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>

        </div>
    </div>
</form>
@section scripts
{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


