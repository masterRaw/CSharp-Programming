@model IEnumerable<mvc.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">PhoneBook</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Create New Contact
            </a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                       <center >Contact Name</center>
                    </th>
                    <th>
                        <center>Contact Number</center>
                    </th>
                    <th>
                        <center>Updation</center>
                    </th>
                        
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td width="30%">@obj.display</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@obj.UID" asp-action="Edit" class="btn btn-primary ">
                                    <i class="fas fa-edit"></i>Edit
                                </a>
                                <a asp-controller="Category" asp-route-Id="@obj.UID" asp-action="Delete" class="btn btn-danger">
                                    <i class="far fa-trash-alt"></i>Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists.</p>
    }

</div>
